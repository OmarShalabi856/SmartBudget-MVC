@model IEnumerable<SmartBudget.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h2>Transaction Dashboard</h2>

<p>
    <a class="btn btn-secondary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Title)
            </td>
            <td>
                <a style="color:white" class="text-decoration-none btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a style="color:white" class="text-decoration-none btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a style="color:white" class="text-decoration-none btn btn-danger"  asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
